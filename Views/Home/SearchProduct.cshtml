<form method="get" asp-action="SearchProduct">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Mahsulot nomini kiriting..." />
        <button class="btn btn-primary" type="submit">Qidirish</button>
    </div>
</form>

@if (Model.Count == 0)
{
    <p class="text-danger">Mahsulot topilmadi.</p>
}
else
{
    foreach (var item in Model)
    {
        <div class="card mb-3" style="width: 18rem;">
            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description</p>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Batafsil</a>
            </div>
        </div>
    }
}
